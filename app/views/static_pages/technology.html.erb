  <div class="span4 offset4">
    <div class="center foreign-link">
      <%= link_to raw("Go to Trackman's website &raquo;"), "http://trackman.dk/Products/TrackMan-Pro.aspx", target: "_blank", class:"btn btn-large btn-success" %>
